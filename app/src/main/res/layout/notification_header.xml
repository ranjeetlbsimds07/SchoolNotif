<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/d5"
        android:layout_marginRight="@dimen/d5">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/schoolnotif"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/txtNotification"
                style="@style/TextViewsDefault"
                android:text="Notification"
                android:textStyle="bold"
                android:paddingTop="@dimen/d5"
                android:paddingBottom="@dimen/d5"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/md_black"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/md_black"
        android:layout_marginTop="@dimen/d3"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="@dimen/d2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School: - "
            android:textStyle="bold"
            android:textSize="@dimen/d20"
            android:textColor="@color/md_black"
            android:paddingTop="@dimen/d5"
            android:paddingBottom="@dimen/d5"
            android:paddingLeft="@dimen/d5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brightland Inter College"
            android:textStyle="bold"
            android:textSize="@dimen/d20"
            android:textColor="@color/md_black"
            android:paddingTop="@dimen/d5"
            android:paddingBottom="@dimen/d5"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="@dimen/d2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student -  "
            android:textStyle="bold"
            android:textSize="@dimen/d20"
            android:textColor="@color/md_black"
            android:paddingTop="@dimen/d5"
            android:paddingBottom="@dimen/d5"
            android:paddingLeft="@dimen/d5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ranjeet Singh"
            android:textStyle="bold"
            android:textSize="@dimen/d20"
            android:textColor="@color/md_black"
            android:paddingTop="@dimen/d5"
            android:paddingBottom="@dimen/d5"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="@dimen/d2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class - "
            android:textStyle="bold"
            android:textSize="@dimen/d20"
            android:textColor="@color/md_black"
            android:paddingTop="@dimen/d5"
            android:paddingBottom="@dimen/d5"
            android:paddingLeft="@dimen/d5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XII (D)"
            android:textStyle="bold"
            android:textSize="@dimen/d20"
            android:textColor="@color/md_black"
            android:paddingTop="@dimen/d5"
            android:paddingBottom="@dimen/d5"/>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/md_black"
        android:layout_marginTop="@dimen/d3"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textStyle="bold"
        android:textSize="@dimen/d20"
        android:textColor="@color/md_black"
        android:paddingTop="@dimen/d5"
        android:paddingBottom="@dimen/d5"
        android:paddingLeft="@dimen/d5"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/md_black"
        android:layout_marginTop="@dimen/d3"></TextView>
</LinearLayout>
